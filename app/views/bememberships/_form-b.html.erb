	<% @title="Compte Admin Action+" %>

<!-- component -->
<div class="h-screen md:flex">
	<div class="relative overflow-hidden md:flex w-1/3 bg-gradient-to-tr from-green-400 to-blue-600 i justify-around items-center hidden">
		<div class="container">

			<h1 class="text-white font-bold text-4xl font-sans"> 
        <div class="before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-pink-500 relative inline-block">
          <p class="relative text-white">Adhésion a Action<sup>+</sup></p>
        </div>
      </h1>
			<p class="text-black mt-1">Vous voulez contribuer à sauver des vies ? <br> Rejoignez Action<sup>+</sup> !
<br> <span class="font-semibold underline"> C'est facile, gratuit et 1 minute suffira.</span></p>
			
    
		</div>
		<div class="absolute -bottom-32 -left-40 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
		<div class="absolute -bottom-40 -left-20 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
		<div class="absolute -top-40 -right-0 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
		<div class="absolute -top-20 -right-20 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
	</div>
	<div class="flex md:w-2/3 justify-center  items-center bg-white">
	
    <div class="flex md:w-2/3 justify-center  items-center bg-white mx-2">
    <h1 class="text-gray-800 font-bold text-2xl mb-2">Vous et Action<sup>+</sup> Agisons Ensemble pour sauver des vies</h1>
 <p class="text-sm font-normal text-gray-600 mb-2">Devenez Membre Adherent d'Action<sup>+</sup></p>

  <%= form_with(model: bemembership) do |f| %>
      <% if bemembership.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(bemembership.errors.count, "error") %> prohibited this bemembership from being saved:</h2>

          <ul>
            <% bemembership.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="flex items-center mt-8 mb-2">
        <%= f.text_field :first_name, class:"placeholder:italic placeholder:text-slate-400 outline-none border rounded-md py-2 w-full", placeholder:"Nom ..." %>
        <%= f.text_field :last_name, class:"placeholder:italic placeholder:text-slate-400 outline-none border ml-2 rounded-md py-2 w-full", placeholder:"Prénom..." %>
      </div>
	
      <%= f.email_field :email, placeholder:"Addresse Email ...", class:"placeholder:italic placeholder:text-slate-400 flex border py-2 rounded-md w-full my-2" %>			
     
      <div class="flex w-full py-2 mb-2">	
        <%= f.text_field :country, class:"pl-2 outline-none border rounded-md", placeholder:"Adresse de residence..." %>
        <%= f.text_field :contact, placeholder:"N° telephone ...", class:"flex border py-2 ml-2 rounded-md w-full placeholder:mx-4" %>	
      </div>
      <div class="flex w-full py-2">
        <div class="mr-4">
          <p class="font-semibold">Vous êtes? :</p>
        </div>
        <%= f.radio_button :gender, value:'Femme' %> <span class="mx-2">Femme</span>
        <%= f.radio_button :gender, value:'Homme' %> <span class="mx-2">Homme</span>
      </div>


      <div class="flex items-center  py-2 ">
        <%= f.check_box :terms, value:"oui", class:" mr-4", checked:true %>
        <p class="text-sm">
        
          Oui, j'adhère à <a href="#exampleModalToggle" class="font-semibold underline" > la charte des valeurs, aux statuts et 
          aux règles de fonctionnement d'Action<a><sup class="">+</sup>, ainsi qu'aux
          <a href="#exampleModalToggle2" class="font-semibold underline" >conditions générales d'utilisation <a> et à la politique
          de  <a href="#exampleModalToggle3" class="font-semibold underline" >protection des données <a> de la plateforme.
        </p>
      </div>
      <div>
        <%= f.submit "Terminer Adhésion", class:"block w-full bg-green-600 mt-2 py-2 pb-2 rounded-2xl text-white font-semibold mb-2" %>
      </div>
  <% end %>

	</div>
</div>






