<!-- component -->

<div>
    <div x-data="{ sidebarOpen: false }" class="flex h-screen bg-gray-200">
        <div :class="sidebarOpen ? 'block' : 'hidden'" @click="sidebarOpen = false" class="fixed z-20 inset-0 bg-black opacity-50 transition-opacity lg:hidden"></div>
        <% if current_user.category === "Adherent" %>
        <!-- Sidebar -->
        <%= render "dashboard/shared/members-sidebar" %>
          
        <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header -->
            <%= render "dashboard/shared/header" %>
             <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
                <div class="container mx-auto px-6 py-8">
                    <h3 class="text-gray-700 text-2xl font-medium"> <%= current_user.last_name %> Merci pour votre Adhesion a Action<sup class="">+</sup></h3>
                    <div class="mt-8">
                        <!-- Header -->
                        <%= render "dashboard/shared/statistics" %>
                    </div>
                    <div class="flex flex-col mt-8">
                        <h3 class="text-gray-700 text-2xl font-medium"> Apprendre plus nos Action<sup>+</sup></h3>
                        <%= render "projets/shared/projets-list" %>
                    </div>
                </div>
            </main>
        </div>
        <% else %>
        <div class="flex-1 flex flex-col overflow-hidden">
        
            <%= render "dashboard/shared/header" %>
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
                <div class="container mx-auto px-6 py-8">
                    <h3 class="text-gray-700 text-2xl font-medium">Tableau de bord</h3>
                    <div class="mt-8">
                        <!-- Header -->
                        <%= render "dashboard/shared/statistics" %>
                    </div>
                    <div class="flex flex-col mt-8">
                        <h3 class="text-gray-700 text-2xl font-medium">Nouveaux Membres</h3>
                        <%= render "membership/shared/members-list" %>
                    </div>
                </div>
            </main>
        </div>
        <% end %>
    </div>
</div>